<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class ="col-md-3">
      <h2 class="mt-3">User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
      <table class ="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>

          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>

        </tbody>
      </table>
      <div class ="row">
        <%= link_to edit_user_path(@user.id), class:'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
        <ul>
         <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
        </div>
      <% end %>

      <%= form_with model:@book, url:books_path, local:true do |f| %>

        <div class="form-group">
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>

        <div class="form-group">
          <lavel for="bool_opinion">Opinion</lavel>
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-sm btn-success"  %>
        </div>

      <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Books</h2>

      <tabel class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
         <%= link_to user_path(@user.id) do %>

          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <% end %>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
         <% end %>
        </tbody>
      </tabel>
    </div>
  </div>
</div>