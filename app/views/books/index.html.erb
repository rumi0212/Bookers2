<%= render 'books/list', book: @book ,user: current_user%>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>

   <tabel class="table table-hover table-inverse">
     <thead>
       <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
       </tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= image_tag @user.get_profile_image(100,100) %></td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
       </tr>
      <% end %>
     </tbody>
   </tabel>
</div>
