<%= render 'books/list', book: @book,user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <td><a class="btn btn-sm btn-success edit_book_path(@book)" href="/books/edit">Edit</a></td>
          <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_path(book)" rel="nofollow" data-method="delete" href="/books">Destroy</a></td>
        </tr>
    </tbody>