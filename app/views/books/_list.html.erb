<div class ="col-md-3">
  <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
  <table class ="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>

      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>

    </tbody>
  </table>
  <div class ="row">
    <%= link_to '',edit_user_path(user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog"  %>
  </div>

  <h2>New book</h2>
    <%= form_with model:book, url:books_path, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%=f.text_area :body %>
    <%= f.submit 'Create Book', class: "btn btn-sm btn-success"  %>
    <% end %>
</div>