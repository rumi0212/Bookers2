<div class ="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="mt-3">Editing Book</h1>
      <%= form_with model: @book, local:true do |f| %>

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
          <ul>
           <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <label for="book_title">Title</label>
        <input class="form-control book_title" type="text" value="<%=@book.title%>" name="book[title]" id="book_title">
      </div>

      <div class="form-group">
        <lavel for="book_opinion">Opinion</lavel>
        <textarea class="form-control book_body" name="book[body]" id="book_body"><%=@book.body%></textarea>
      </div>

      <div class="field"><%= f.submit 'Update Book',class:"btn btn-success" %></div>

      <div class="field">
        <span><%= link_to "Show", book_path(@book.id) %></span>
        <span>ï½œ</span>
        <span><%= link_to "Back", books_path %></span>
      </div>

      <% end %>

    </div>
  </div>
</div>